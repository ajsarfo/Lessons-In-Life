<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:background="@color/color_primary"
    android:gravity="start|center_vertical"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/nav_drawer_image"
        android:layout_width="@dimen/nav_drawer_header_image_size"
        android:layout_height="@dimen/nav_drawer_header_image_size"
        app:shapeAppearanceOverlay="@style/CornerSize50Percent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="11dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/primary_bold"
        android:text="@string/developer_indentification"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:fontFamily="@font/primary_bold"
        android:text="@string/company_email"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>